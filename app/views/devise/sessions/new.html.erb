<div class=" intro">
  <h2>Connecte Toi</h2>
  <div class="connect_form">
</div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                label:'Email',
                input_html: { autocomplete: "email", class: 'input_field' } %>
      <%= f.input :password,
                required: false,
                label:'Mot de passe',
                input_html: { autocomplete: "current-password",class: 'input_field' } %>
      <%= f.input :remember_me, label:'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  </div>
