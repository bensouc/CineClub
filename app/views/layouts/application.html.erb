<!DOCTYPE html>
<html>
  <head>
    <title>Cineclub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- googlefont -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Urbanist:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
    <!-- fontawesome-->
    <script src="https://kit.fontawesome.com/aa9dc78317.js" crossorigin="anonymous"></script>
    <!--Scripts -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  <body>
    <%# <%= render 'shared/navbar' %>
    <%# <%= render 'shared/flashes' %> %>
    <%= yield %>
    <%unless current_user.nil?  %>
      <div class="management">
        <%= link_to events_path do%>
          <i class="fa-solid fa-list"></i>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete do%>
          <i class="fa-solid fa-right-from-bracket"></i>
        <% end %>
      </div>
    <% end %>
  </body>
</html>
